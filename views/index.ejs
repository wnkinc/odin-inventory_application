<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <br />
    <%- include('./partials/search.ejs') %>
    <h1><%= title %></h1>
    <div class="gift-container">
      <% gifts.forEach((gift) => { %>
      <div class="card">
        <a href="/<%= gift.id %>/update" class="card-link">Update</a>
        <form action="/<%= gift.id %>/delete" method="POST" class="delete-form">
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this gift?');"
            class="delete-button"
          >
            Delete
          </button>
        </form>
        <h2 class="gift-name"><%= gift.name %></h2>
        <p class="gift-description">Description: <%= gift.description %></p>
        <p class="gift-price">Price: <%= gift.price %></p>
        <p class="gift-age-group">Age Group: <%= gift.age_group %></p>
        <small class="gift-date"
          >Added on: <%= gift.created_at.toLocaleString() %></small
        >
      </div>
      <% }); %>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
