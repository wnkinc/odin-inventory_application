<!-- index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <br />
    <%- include('./partials/search.ejs') %>
    <h1><%= title %></h1>
    <ul>
      <% gifts.forEach((gift) => { %>
      <li>
        <a href="/<%= gift.id %>/update">Update</a>
        <form
          action="/<%= gift.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this gift?');"
          >
            Delete
          </button>
        </form>
        <strong><%= gift.name %>:</strong> <%= gift.description %> <%=
        gift.price %><%= gift.age_group %>
        <br />
        <small>Added on: <%= gift.created_at.toLocaleString() %></small>
      </li>
      <br />
      <% }); %>
    </ul>
  </body>
</html>
